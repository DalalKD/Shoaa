<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    tools:context=".GetFace">


    <ImageView
        android:id="@+id/arrow2"
        android:layout_width="69dp"
        android:layout_height="82dp"
        android:onClick="Parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/aa"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/log"
        android:layout_width="130dp"
        android:layout_height="91dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/nnext"
        android:layout_width="155dp"
        android:layout_height="44dp"
        android:layout_marginTop="44dp"
        android:background="#2196F3"
        android:onClick="q3"
        android:text="التالي"
        android:textColor="#0B0A0A"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/log"
        app:layout_constraintVertical_bias="0.948" />

    <TextView
        android:id="@+id/how"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:background="#9FFFEB3B"
        android:text="كيف سيتم التعرف على وجه طفلك ؟"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.399" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="375dp"
        android:layout_height="114dp"
        android:text="أولا ستفتح الكاميرا ، ثم اتبع الخطوات القادمة التي ستظهر لك "
        android:textAlignment="center"
        android:textColor="#121111"
        android:textIsSelectable="true"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.655" />












</androidx.constraintlayout.widget.ConstraintLayout>